# Environment Configuration for BambiSleep™ CatGirl Avatar System
# Copy this file to .env and fill in your values

# Node.js Environment
NODE_ENV=development
PORT=3000

# Unity Configuration
UNITY_PATH=/opt/unity/Editor/Unity
UNITY_PROJECT_PATH=./catgirl-avatar-project
UNITY_BATCH_MODE=true

# Unity Gaming Services (UGS)
UNITY_PROJECT_ID=
UNITY_ENVIRONMENT=development

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3000
WS_PORT=3001

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bambisleep.log

# MCP Configuration
MCP_SERVERS_ENABLED=true
MCP_CONFIG_PATH=~/.config/mcp

# Database (for future use)
DATABASE_URL=

# GitHub Integration (for MCP)
GITHUB_PERSONAL_ACCESS_TOKEN=

# Feature Flags
ENABLE_COW_POWERS=true
ENABLE_BUTTERFLY_FLIGHT=true
ENABLE_AUCTION_HOUSE=true

# Performance
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30000

# Security
CORS_ORIGIN=*
API_KEY=

# BambiSleep™ Configuration
CUTENESS_LEVEL=MAXIMUM_OVERDRIVE
PINK_FRILLY_MODE=true
TRADEMARK_ENFORCEMENT=true
