# BambiSleepâ„¢ Chat Catgirl Production Environment Variables
# Copy this file to .env.production and fill in actual values

# Node.js Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Unity Bridge Configuration
UNITY_BRIDGE_ENABLED=true
UNITY_BRIDGE_PORT=3001
UNITY_EXECUTABLE_PATH=/app/unity-builds/catgirl-avatar.x86_64

# MCP Server Configuration
MCP_SERVERS_ENABLED=true
MCP_LAYER_0_ENABLED=true
MCP_LAYER_1_ENABLED=true
MCP_LAYER_2_ENABLED=true
CUSTOM_MCP_SERVERS_ENABLED=true

# Custom MCP Servers
BAMBISLEEP_HYPNOSIS_MCP_ENABLED=true
BAMBISLEEP_AUDIO_PATH=/app/audio
AIGF_PERSONALITY_MCP_ENABLED=true
TRIGGER_SYSTEM_MCP_ENABLED=true
CHAT_ANALYTICS_MCP_ENABLED=true

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=bambisleep_chat
POSTGRES_USER=bambisleep
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHAR_STRING
SESSION_MAX_AGE=86400000

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=sk_live_XXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXX

# Discord Integration (optional)
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_GUILD_ID=

# Security Configuration
CORS_ORIGIN=https://bambisleep.chat
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_64_CHAR_STRING

# Analytics & Monitoring
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
SENTRY_DSN=

# Commander-Brandynette Agent Authority
AGENT_AUTHORITY_ENABLED=true
RING_LAYER_ENFORCEMENT=true
DEFAULT_AGENT_RING=2

# Content Compliance
CONTENT_COMPLIANCE_REQUIRED=true
AGE_VERIFICATION_REQUIRED=true
MINIMUM_AGE=18

# SSL/TLS Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
ENABLE_DAILY_BACKUPS=true
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=

# Feature Flags
ENABLE_VR_SUPPORT=true
ENABLE_GAMBLING_FEATURES=true
ENABLE_COW_POWERS=true
ENABLE_HYPNOSIS_TRIGGERS=true
