{
  // Unity C# Development Settings for BambiSleep™ CatGirl Avatar System
  
  // ===== C# Language Settings =====
  "dotnet.defaultSolution": "catgirl-avatar-project/catgirl-avatar.sln",
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.useModernNet": true,
  "omnisharp.organizeImportsOnFormat": true,
  
  // ===== Unity Specific Settings =====
  "unity.generateAll": true,
  "unity.enableMSBuildProjectSupport": true,
  "unity.codeCompletion": "Unity",
  "unity.symbolLoadTimeout": 60000,
  
  // ===== File Associations for Unity =====
  "files.associations": {
    "*.shader": "shaderlab",
    "*.cginc": "shaderlab",
    "*.compute": "shaderlab",
    "*.hlsl": "hlsl",
    "*.uss": "css",
    "*.uxml": "xml",
    "*.asmdef": "json",
    "*.asmref": "json"
  },
  
  // ===== File Exclusions for Better Performance =====
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/Library": true,
    "**/Temp": true,
    "**/obj": true,
    "**/Logs": true,
    "**/*.csproj": true,
    "**/*.unityproj": true,
    "**/*.sln": true,
    "**/*.suo": true,
    "**/*.user": true,
    "**/*.userprefs": true,
    "**/*.pidb": true,
    "**/*.booproj": true,
    "**/*.svd": true,
    "**/*.pdb": true,
    "**/*.mdb": true,
    "**/*.opendb": true,
    "**/*.VC.db": true
  },
  
  // ===== Search Exclusions =====
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/Library": true,
    "**/Temp": true,
    "**/obj": true,
    "**/*.meta": true
  },
  
  // ===== C# Formatting =====
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.codeActionsOnSave": {
      "source.addMissingImports": "explicit",
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  
  // ===== IntelliSense Settings =====
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  
  // ===== Diagnostic Settings =====
  "csharp.inlayHints.parameters.enabled": true,
  "csharp.inlayHints.parameters.forLiteralParameters": true,
  "csharp.inlayHints.parameters.forIndexerParameters": true,
  "csharp.inlayHints.parameters.forObjectCreationParameters": true,
  "csharp.inlayHints.parameters.forOtherParameters": true,
  "csharp.inlayHints.parameters.suppressForParametersThatDifferOnlyBySuffix": false,
  "csharp.inlayHints.parameters.suppressForParametersThatMatchMethodIntent": false,
  "csharp.inlayHints.parameters.suppressForParametersThatMatchArgumentName": false,
  
  // ===== Code Lens =====
  "csharp.referencesCodeLens.enabled": true,
  "csharp.referencesCodeLens.filteredSymbols": [],
  
  // ===== Terminal Settings for Unity =====
  "terminal.integrated.env.linux": {
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1"
  },
  
  // ===== Git Settings =====
  "git.ignoreLimitWarning": true,
  "git.mergeEditor": true,
  
  // ===== Pink Theme Settings for BambiSleep™ Aesthetic =====
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#ff69b420",
    "editor.selectionBackground": "#ff69b440",
    "editorCursor.foreground": "#ff1493",
    "editorBracketHighlight.foreground1": "#ff69b4",
    "editorBracketHighlight.foreground2": "#ff1493",
    "editorBracketHighlight.foreground3": "#c71585"
  },
  
  // ===== Editor Settings =====
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.rulers": [120],
  "editor.wordWrap": "off",
  "editor.renderWhitespace": "boundary",
  
  // ===== File Watching =====
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/Library/**": true,
    "**/Temp/**": true,
    "**/obj/**": true
  },
  
  // ===== Extension Settings =====
  "extensions.ignoreRecommendations": false,
  
  // ===== Task Settings =====
  "tasks.problemMatchers.neverPrompt": {
    "shell": false
  }
}
